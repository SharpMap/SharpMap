<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net40-client' ">
    <TargetFrameworkIdentifier>.NETFramework</TargetFrameworkIdentifier>
    <TargetFrameworkProfile>Client</TargetFrameworkProfile>
    <TargetFrameworkVersion>v4.0</TargetFrameworkVersion>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net40-client' Or '$(TargetFramework)' == 'net452'">
    <RequiresFrameworkAssemblyReferences>true</RequiresFrameworkAssemblyReferences>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'ReleaseLinux' ">
    <AssetTargetFallback Condition=" '$(TargetFramework)' == 'net40-client' ">net452</AssetTargetFallback>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net40-client;net452;netstandard2.0</TargetFrameworks>
    <Authors>SharpMap - Team</Authors>
    <Product>SharpMap Engine</Product>
    <Copyright>Copyright 2006 Morten Nielsen, Copyright 2008-2018 SharpMap - Team</Copyright>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/SharpMap/SharpMap</PackageProjectUrl>
    <RepositoryUrl>https://github.com/SharpMap/SharpMap.git</RepositoryUrl>
    <PackageIconUrl>https://avatars1.githubusercontent.com/u/8349804??v=3&amp;amp;s=120</PackageIconUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/SharpMap/SharpMap/Branches/1.0/license.txt</PackageLicenseUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>1.2.0.0</AssemblyVersion>
    <FileVersion>1.2.0.0</FileVersion>
    <PackageTags>SharpMap GIS Map GeoSpatial</PackageTags>
    <Description>This package contains the core components of SharpMap.</Description>
    <Version>1.2.0-pre1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Common.Logging" Version="3.4.1" />
    <PackageReference Include="Common.Logging.Core" Version="3.4.1" />
    <PackageReference Include="GeoAPI.CoordinateSystems" Version="1.7.5" />
    <PackageReference Include="NetTopologySuite.Core" Version="1.15.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Drawing.Common" Version="4.5.0">
    </PackageReference>
    <PackageReference Include="System.Data.SqlClient" Version="4.5.1" />
    <PackageReference Include="System.Drawing.Primitives" Version="4.3.0">
    </PackageReference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition=" '$(Configuration)' != 'ReleaseLinux' ">
    <Exec Command="cd &quot;$(SolutionDir)&quot;&#xD;&#xA;&quot;$(MSBuildBinPath)msbuild&quot; SharpMap.targets /t:Version&#xD;&#xA;cd &quot;$(ProjectDir)&quot;" />
  </Target>

</Project>
